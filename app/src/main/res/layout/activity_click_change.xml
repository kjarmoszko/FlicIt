<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".ClickChangeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Click"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/singleButton"
        android:onClick="singleClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Double Click"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/singleButton"
        android:id="@+id/doubleButton"
        android:onClick="doubleClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/doubleButton"
        android:id="@+id/holdButton"
        android:onClick="holdClick"/>
</RelativeLayout>